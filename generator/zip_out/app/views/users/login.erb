<div class="">

  <div class="erb_header">
    <h3>User Login</h3>
  </div>

  <form class="form-horizontal" action="/users/login" method="post">

    <div class="form-group">
      <label for="email" class="col-sm-2 control-label">Email</label>
      <div class="col-sm-10">
        <input class="form-control" id="email" name="user[email]" type="text" />
      </div>
    </div>

    <div class="form-group">
      <label for="password" class="col-sm-2 control-label">Password</label>
      <div class="col-sm-10">
        <input class="form-control" id="password" name="user[password]" type="password" />
      </div>
    </div>

    <button class="btn btn-success" name="commit" type="submit">Login</button>
  </form>

</div>
